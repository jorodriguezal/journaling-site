<h1>Record for <%= Date.today %></h1>
<%= form_with(model: @record, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :body, 'What do you want to write?' %>
    <%= form.text_area :body, class: 'form-control', rows: 5 %>
  </div>
  <div class="form-group">
    <%= form.label :mood, 'How do you feel?' %>
    <%= form.select :mood, %w[happy sad angry confused excited], {}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.submit 'Save Record', class: 'btn btn-primary' %>
  </div>
<% if @record.errors.any? %>
    <div class="alert alert-danger">
      <h4>There were some errors:</h4>
      <ul>
        <% @record.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>